[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  pl = pull
  ps = push
  aa = add -A
  upd = ! git pull && git submodule update --recursive
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  editor = nvim
  excludesfile = ~/.gitignoreglobal
[commit]
  template = ~/.gitmessage
  gpgsign = true
[url "git@github.com:"]
  insteadOf = https://github.com/
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[pull]
  rebase = true
